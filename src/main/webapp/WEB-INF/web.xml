<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ua.ivan.provider.servlets.filter.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.GreetingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.MainPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAddPackageServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.UserAddPackageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAddPackageServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserCabinetServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.UserCabinetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserCabinetServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserDeletePackageServlet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.UserDeletePackageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserDeletePackageServlet</servlet-name>
        <url-pattern>/user/unsub</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminCabinet</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminCabinet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditPackage</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.EditPackageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditPackage</servlet-name>
        <url-pattern>/admin/editPackagePage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddPackage</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.AddNewPackageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddPackage</servlet-name>
        <url-pattern>/admin/addPackage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeletePackage</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.DeletePackageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeletePackage</servlet-name>
        <url-pattern>/admin/deletePackage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditFormPackage</servlet-name>
        <servlet-class>ua.ivan.provider.servlets.servlet.EditPackageFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditFormPackage</servlet-name>
        <url-pattern>/admin/editPackage</url-pattern>
    </servlet-mapping>

</web-app>